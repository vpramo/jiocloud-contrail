[DEFAULT]
  analytics_data_ttl=<%= @analytics_data_ttl %>
  cassandra_server_list=<%= @cassandra_ip_list.map{ |ip| "#{ip}:#{@cassandra_port}" }.join(' ') %>
  kafka_broker_list= <%= @kafka_ip_list.map{ |ip| "#{ip}:#{@kafka_port}" }.join(' ') %>
# dup=0
  hostip=<%= @collector_ip %> # Resolved IP of `hostname`
# hostname= # Retrieved as `hostname`
  http_server_port=8089
#  log_category=SYS_CRIT
# log_disable=0
  log_file=/var/log/contrail/contrail-collector.log
  log_file_size=<%= @log_file_size %>
  log_level=<%= @log_level %>
  log_local=<%= @log_local %>
# log_files_count=10
# log_file_size=1048576 # 1MB
# log_level=SYS_NOTICE
# log_local=0
  syslog_port=-1
# test_mode=0

[COLLECTOR]
  port=8086
# server= 0.0.0.0

[DISCOVERY]
# port=5998
  server=<%= @discovery_virtual_ip %> # discovery_server IP address

[REDIS]
  port=6379
  server=<%= @redis_ip %>

